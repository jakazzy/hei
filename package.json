{
    "name": "board",
    "version": "1.0.0",
    "description": "Simple board",
    "main": "src/index.js",
    "scripts": {
        "start:dev": "nodemon --exec babel-node src/index.js",
        "build": "npm run clean && npm run build-babel",
        "start:prod": "NODE_ENV=production nodemon src/index.js",
        "clean": "rm -rf build && mkdir build",
        "start": "npm run build && node ./build/index.js",
        "build-babel": "babel -d ./build ./src -s",
        "prod": "npm run clean && npm run build && node bin/prod",
        "prettier": "node_modules/.bin/prettier . \"src/**/*.{js,json}\"",
        "format": "npm run prettier -- --write",
        "lint": "node_modules/.bin/eslint \"src/**/*.{js,jsx,css}\"",
        "lint:fix": "npm run lint -- --fix"
    },
    "lint-staged": {
        "src/**/*.{js,jsx}": [
            "npm run format",
            "npm run lint:fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jakazzy/hei.git"
    },
    "keywords": [
        "Nodejs"
    ],
    "author": "jakazzy",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jakazzy/hei/issues"
    },
    "homepage": "https://github.com/jakazzy/hei#readme",
    "dependencies": {
        "@babel/cli": "^7.10.3",
        "@babel/core": "^7.10.3",
        "@babel/node": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
        "babel-preset-airbnb": "^5.0.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "csv-parse": "^4.10.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.3",
        "mongoose": "^5.9.20",
        "mongoose-paginate-v2": "^1.3.9",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "regenerator-runtime": "^0.13.5",
        "twit": "^2.2.11"
    },
    "devDependencies": {
        "eslint": "^7.2.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-node": "^4.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5"
    },
    "engines": {
        "node": "12.8.1"
    }
}
